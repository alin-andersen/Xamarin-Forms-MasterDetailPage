<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MasterPage">
    <!-- This grid contains the master view. The colume is set accordning to
         the screen size and the specified open factor. -->
    <Grid ColumnSpacing="0" Padding="0" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="leftColumnDefinition" Width="0"/>
            <ColumnDefinition x:Name="centerColumnDefinition" Width="*"/>
            <ColumnDefinition x:Name="rightColumnDefinition" Width="0"/>
        </Grid.ColumnDefinitions>
        <ContentView Grid.Column="1" x:Name="masterViewHolder"/>
    </Grid>
</ContentPage>